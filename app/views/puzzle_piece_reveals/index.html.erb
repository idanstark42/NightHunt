<p id="notice"><%= notice %></p>

<h1>Listing Puzzle Piece Reveals</h1>

<table>
  <thead>
    <tr>
      <th>Puzzle piece</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puzzle_piece_reveals.each do |puzzle_piece_reveal| %>
      <tr>
        <td><%= puzzle_piece_reveal.puzzle_piece %></td>
        <td><%= puzzle_piece_reveal.team %></td>
        <td><%= link_to 'Show', puzzle_piece_reveal %></td>
        <td><%= link_to 'Edit', edit_puzzle_piece_reveal_path(puzzle_piece_reveal) %></td>
        <td><%= link_to 'Destroy', puzzle_piece_reveal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Puzzle piece reveal', new_puzzle_piece_reveal_path %>
